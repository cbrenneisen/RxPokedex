# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

# ignore warnings from cocoapods
inhibit_all_warnings!

target 'RxPokedex' do
  
  use_frameworks!

  # Pods for RxPokedex

    pod 'Alamofire'
    pod 'Kingfisher' 
    pod 'RealmSwift'
    pod 'RxSwift'
    pod 'RxCocoa'
    pod 'RxDataSources'
    pod 'RxAlamofire'
    pod 'RxRealm'
    pod 'RxSwiftExt'
    pod 'RxGesture' 
    pod 'Swinject'
    pod 'SwinjectStoryboard'    

  target 'RxPokedexTests' do
    inherit! :search_paths
    # Pods for testing

    pod 'RxTest'
    pod 'RxBlocking' 
  end

  target 'RxPokedexUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
